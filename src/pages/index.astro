---
import { format } from 'timeago.js'
import { getCollection } from 'astro:content'

import MainLayout from '@/layouts/main.astro'
import { getFormattedDate } from '@/utils/date'
import { getHomepageCollection } from '@/utils/content'
import {
  GITHUB_URL,
  TWITTER_URL,
  YOUTUBE_URL,
  NEWSLETTER_URL,
} from '../constants'

const [hasMorePosts, blogposts] = await getHomepageCollection('blog')
const [hasMoreCourses, courses] = await getHomepageCollection('courses')
const [hasMoreTalks, talks] = await getHomepageCollection('talks')
const [hasMoreVideos, videos] = await getHomepageCollection('videos')
---

<MainLayout>
  <div class='hero'>
    <div class='hero--text'>
      <h1>Hi, my name is Lazar Nikolov.</h1>
      <p>
        Born in &apos;94. I work at <a
          target='_blank'
          target='_blank'
          rel='external nofollow noopener'
          href='https://sentry.io/welcome'>Sentry.io ↗</a
        > as a Developer Advocate. I&apos;m a full-stack engineer, a designer, a
        content creator, and an <a
          target='_blank'
          target='_blank'
          rel='external nofollow noopener'
          href='https://egghead.io'>egghead.io ↗</a
        > instuctor. Based in Canada.
      </p>
    </div>
  </div>
  <div class='content-table'>
    <div class='content-table--section'>
      <h2>Pages</h2>
      <div class='content-table--section-links'>
        <a href='/about'>About</a>
        <a href='/uses'>Uses</a>
        <a href='/clophon'>Colophon</a>
      </div>
    </div>
    <div class='content-table--section'>
      <h2>Courses</h2>
      <div class='content-table--section-list'>
        {
          courses.map((course) => (
            <div class='content-table--list-item'>
              <a
                href={course.data.url}
                target='_blank'
                rel='external nofollow noopener'
              >
                {course.data.title} ↗︎
              </a>
              <p>{course.data.numberOfLessons} lessons</p>
            </div>
          ))
        }
        {
          hasMoreCourses && (
            <a href='/courses' class='see-more'>
              See more →︎
            </a>
          )
        }
      </div>
    </div>
    <div class='content-table--section'>
      <h2>Writing</h2>
      <div class='content-table--section-list'>
        {
          blogposts.map((post) =>
            post.data.isExternal ? (
              <div class='content-table--list-item'>
                <a
                  class='content-table--item-title'
                  target='_blank'
                  rel='external nofollow noopener'
                  href={post.data.externalUrl}
                >
                  {post.data.title} ↗︎
                </a>
                <p>{getFormattedDate(post.data.date)}</p>
              </div>
            ) : (
              <div class='content-table--list-item'>
                <a
                  class='content-table--item-title'
                  href={`/blog/${post.slug}`}
                >
                  {post.data.title}
                </a>
                <p>{getFormattedDate(post.data.date)}</p>
              </div>
            ),
          )
        }
        {
          hasMorePosts && (
            <a href='/blog/all/1' class='see-more'>
              See more →︎
            </a>
          )
        }
      </div>
    </div>
    <div class='content-table--section'>
      <h2>Talks</h2>
      <div class='content-table--section-list'>
        {
          talks.map((talk) => (
            <div class='content-table--list-item'>
              <a
                href={talk.data.url}
                target='_blank'
                rel='external nofollow noopener'
              >
                {talk.data.title} ↗︎
              </a>
              <p>{format(talk.data.date)}</p>
            </div>
          ))
        }
        {
          hasMoreTalks && (
            <a href='/talks' class='see-more'>
              See more →︎
            </a>
          )
        }
      </div>
    </div>
    <div class='content-table--section'>
      <h2>Videos</h2>
      <div class='content-table--section-list'>
        {
          videos.map((video) => (
            <div class='content-table--list-item'>
              <a
                href={video.data.url}
                target='_blank'
                rel='external nofollow noopener'
              >
                {video.data.title}
              </a>
              <p>{format(video.data.date)}</p>
            </div>
          ))
        }
        {
          hasMoreVideos && (
            <a href='/videos' class='see-more'>
              See more →︎
            </a>
          )
        }
      </div>
    </div>
    <div class='content-table--section'>
      <h2>Social</h2>
      <div class='content-table--section-links'>
        <a href={YOUTUBE_URL} target='_blank' rel='external nofollow noopener'
          >YouTube ↗︎</a
        >
        <a
          href={NEWSLETTER_URL}
          target='_blank'
          rel='external nofollow noopener'>Newsletter ↗︎</a
        >
        <a href={TWITTER_URL} target='_blank' rel='external nofollow noopener'
          >Twitter ↗︎</a
        >
        <a href={GITHUB_URL} target='_blank' rel='external nofollow noopener'
          >GitHub ↗︎</a
        >
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 2fr;
    margin-bottom: 60px;
  }

  .hero--text {
    display: flex;
    flex-direction: column;
    row-gap: 16px;
    grid-column-start: 2;
  }

  h1 {
    font-size: var(--fontSizes-2xl);
  }

  h2 {
    font-weight: normal;
    letter-spacing: 0.7px;
    font-size: var(--fontSizes-lg);
  }

  .content-table {
    display: grid;
  }

  .content-table h3 {
    font-weight: normal;
  }

  .content-table--section {
    display: grid;
    grid-template-columns: 1fr 2fr;
    border-top: 1px solid var(--colors-foreground);
    padding: 6px 8px;
  }

  .content-table--section:last-of-type {
    border-bottom: 1px solid var(--colors-foreground);
  }

  .content-table--section h2 {
    flex-shrink: 0;
  }

  .content-table--section > div {
    grid-column-start: 2;
  }

  .content-table--section-links {
    display: flex;
    justify-content: space-between;
  }

  .content-table--section-list {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    row-gap: 6px;
  }

  .content-table--list-item {
    display: flex;
    justify-content: space-between;
  }

  .content-table--list-item a {
    margin-right: 6px;
    white-space: nowrap;
    overflow-x: hidden;
    text-overflow: ellipsis;
  }

  .content-table--list-item p {
    flex-shrink: 0;
    flex-grow: 1;
    display: flex;
    align-items: baseline;
  }

  .content-table--list-item p::before {
    content: '';
    flex: 1;
    display: inline-flex;
    margin-right: 6px;
    border-bottom: 2px dotted var(--colors-foreground);
  }

  .content-table--item-title {
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .see-more {
    font-weight: 600;
    font-family: var(--font-semibold);
    color: var(--colors-purple);
  }

  @media (max-width: 768px) {
    .hero {
      display: flex;
      flex-direction: column;
      margin-bottom: 24px;
    }

    .content-table {
      margin-bottom: 24px;
      overflow-x: hidden;
    }

    .content-table--section {
      grid-template-columns: repeat(1, 1fr);
      row-gap: 18px;
      padding: 16px 8px;
    }

    .content-table--section > div {
      grid-column-start: 1;
    }

    .content-table--section-links {
      flex-direction: column;
      row-gap: 16px;
    }

    .content-table--section-list {
      row-gap: 16px;
    }

    .content-table--list-item {
      display: flex;
      flex-direction: column;
    }

    .content-table--list-item a {
      white-space: break-words;
    }

    .content-table--list-item p::before {
      display: none;
    }
  }
</style>
