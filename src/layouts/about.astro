---
import MainLayout from '@/layouts/main.astro'
import Prose from '@/components/prose.astro'
---

<MainLayout title='About' desc='The story of Lazar Nikolov.'>
  <Prose>
    <div class='about--container'>
      <slot />
    </div>
  </Prose>
</MainLayout>

<style is:global>
  .about--container {
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-column-gap: 24px;
    margin-top: 83px;
    padding: 40px;
    border: 1px solid var(--colors-foreground);
  }

  .about--container > * {
    grid-column-start: 2;
    padding: 0px;
    margin: 0px;
  }

  .about--container h2 {
    margin-top: 24px;
    margin-bottom: 16px;
  }

  .about--container p {
    margin: 0px 0px 16px 0px;
  }

  .about--container p:has(img) {
    grid-column-start: 1;
    width: 100%;
  }

  .about--container img {
    border: 2px solid var(--colors-foreground);
    grid-column-start: 1;
  }

  @media (max-width: 768px) {
    .about--container {
      grid-template-columns: 1fr;
      padding: 24px;
    }

    .about--container *:not(img) {
      grid-column-start: 1;
    }
  }
</style>
