---
interface Props {
  href: string
  rel?: string
  target?: string
  className?: string
}

const { href, rel, target, className } = Astro.props
---

<a
  href={href}
  rel={[rel, 'external', 'nofollow', 'noopener'].filter(Boolean).join(' ')}
  target={target ?? '_blank'}
  class:list={[className, 'external-link']}><slot /> â†—</a
>

<style>
  @layer defaults {
    .external-link {
      white-space: inherit;
    }
  }
</style>
